{% extends "layout.twig" %} {% block content %}

<div class="logout text-center">
{% include "components/button-logout.twig" %}
</div>






<!-- Block Question  -->

<div class="text-center">
	<h1>{{ quiz.question.title }}</h1>
</div>

<hr />

{% if selecteditem %}

{% include "components/selected-item.twig" %}

