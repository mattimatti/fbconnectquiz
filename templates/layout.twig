<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:og="http://ogp.me/ns#"
      xmlns:fb="https://www.facebook.com/2008/fbml">
<head>
<meta charset="utf-8" />
<title>{{ theme }}</title>

<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
 <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-title" content="Starwars">
  
{% block facebook %} 
<meta property="og:title" content="Which Star Wars Character Are You?!" />
<meta property="og:description" content="Some text here!" />
<meta property="og:image" content="{{ settings.baseDomain }}/themes/{{ theme }}/images/share.png"/>
<meta property="og:url" content="{{ settings.baseDomain }}"/>
{% endblock %}


<script>
    document.createElement( "picture" );
</script>
  
  

{# <link href='https://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet' type='text/css'>#}
{# <link href='https://fonts.googleapis.com/css?family=Lato:300' rel='stylesheet' type='text/css'>#}

<link href='/themes/{{ theme }}/dist/css/styles.min.css' rel='stylesheet' type='text/css'>

</head>
<body>
	<div class="container">{% block content %} {% endblock %}</div>

	<script type="text/javascript" src="/themes/{{ theme }}/dist/js/app.dist.min.js"></script>
{# 	<script type="text/javascript" src="/bower_components/picturefill/dist/picturefill.min.js"></script>#}

	<script type="text/javascript">

		var App = App || {};

		var shareUrl = "https://www.facebook.com/dialog/share?app_id={{ settings.facebook.app_id }}&display=popup&href={{ shareurl|url_encode }}&redirect_uri={{ shareurl|url_encode }}";
		
		window.fbAsyncInit = function() {
			FB.init({
				appId : '{{ settings.facebook.app_id }}',
				cookie : true,
				version : 'v2.5'
			});
	
			App.fb = new FacebookApp({{ permissions|raw }}, '{{ settings.baseDomain }}', shareUrl );
			
		}
	
	</script>
</body>
</html>
